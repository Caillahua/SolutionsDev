<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/genreBackgroundColor"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_artists_cover_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/explorando_artistas" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#df2d2d2d" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="25dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                style="@style/genre_header_text_style"
                fontPath="fonts/MaaxRounded_1.otf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="La canción se reproducirá en" />

            <TextView
                style="@style/genre_header_text_style"
                fontPath="fonts/MaaxRounded_1.otf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="unos segundos." />

            <TextView
                style="@style/genre_header_text_style"
                fontPath="fonts/MaaxRoundedBold_2.otf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Por favor espere ..." />

        </LinearLayout>

        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_artists_cover_two"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:scaleType="centerCrop"
                android:src="@drawable/explorando_artistas" />

            <TextView
                android:id="@+id/tv_song_name"
                fontPath="fonts/MaaxRoundedBold_2.otf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="Nombre de la canción 1"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tv_article_name"
                style="@style/genre_header_text_style"
                fontPath="fonts/MaaxRounded_1.otf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Nombre del artista" />

            <TextView
                android:id="@+id/tv_song_length"
                fontPath="fonts/MaaxRoundedBold_2.otf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center"
                android:text="03:15"
                android:textColor="@color/colorPrimary" />
        </LinearLayout>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:gravity="center">
            
            <ImageView
                android:id="@+id/iv_seconds"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/play_circle_button"/>

        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>
