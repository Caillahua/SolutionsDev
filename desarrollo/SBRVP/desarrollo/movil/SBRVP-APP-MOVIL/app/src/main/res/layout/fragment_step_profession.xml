<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/genreBackgroundColor"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/yourself_header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <TextView
            style="@style/genre_header_text_style"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/professional_first_header" />

        <TextView
            style="@style/genre_header_text_style"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="@string/professional_second_header" />
        <View
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp"
            android:background="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <RadioGroup
            android:id="@+id/rg_what_are_you"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll_professional"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:animateLayoutChanges="true"
                android:background="@drawable/button_square_just_border"
                android:clickable="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_professional"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="0.1"
                        android:background="@color/white"
                        android:clickable="false"
                        android:drawingCacheQuality="low"
                        android:scaleType="centerCrop"
                        android:src="@drawable/soymusico" />

                    <TextView
                        android:id="@+id/tv_professional"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="SOY MÃšSICO"
                        android:textColor="@color/white"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_amateur"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:animateLayoutChanges="true"
                android:background="@drawable/button_square_just_border"
                android:clickable="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/iv_amateur"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="0.1"
                        android:background="@color/white"
                        android:clickable="false"
                        android:drawingCacheQuality="low"
                        android:scaleType="centerCrop"
                        android:src="@drawable/soyaficionado" />

                    <TextView
                        android:id="@+id/tv_amateur"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="SOY AFICIONADO"
                        android:textColor="@color/white"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </LinearLayout>
        </RadioGroup>

    </LinearLayout>

</LinearLayout>
