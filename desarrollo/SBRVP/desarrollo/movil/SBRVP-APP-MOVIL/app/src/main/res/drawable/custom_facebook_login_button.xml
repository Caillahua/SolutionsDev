<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Estado Presionado -->
    <item android:state_pressed="true">
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="4dp" />
                    <solid android:color="@color/blue_facebook_select" />
                    <stroke android:width="1dp" android:color="@color/blue_facebook_select" />
                </shape>
            </item>
        </layer-list>
    </item>

    <!-- Estado Focuseado -->
    <item>
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="4dp" />
                    <solid android:color="@color/facebook_login_button" />
                    <stroke android:width="1dp" android:color="@color/facebook_login_button" />
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- Estado Normal -->
    <item>
        <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="4dp" />
                    <solid android:color="@color/facebook_login_button" />
                    <stroke android:width="1dp" android:color="@color/facebook_login_button" />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>